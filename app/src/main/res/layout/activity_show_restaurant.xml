<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowRestaurantActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailed_name_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/lightBlue"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <ImageView
        android:id="@+id/detailed_restaurant_picture"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:rotation="90"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/waze_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/waze"
            android:layout_margin="25dp"/>

        <TextView
            android:id="@+id/detailed_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/lightBlue"
            android:layout_margin="20dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/call"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/detailed_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/lightBlue"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>